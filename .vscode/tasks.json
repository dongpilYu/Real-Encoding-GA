{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "GAfunction.cpp",
                "GeneticAlgorithm.cpp",
                "Chromosome.cpp",
                "Population.cpp",
                "Log.cpp",
                "-o",
                "GAfunction.exe",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "g++",
            "args": [
                "GAfunction.cpp",
                "GeneticAlgorithm.cpp",
                "Chromosome.cpp",
                "Population.cpp",
                "Log.cpp",
                "-o",
                "GAfunction.exe"
            ],
            "group": "build"
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "${workspaceFolder}/GAfunction.exe",
            "args": [
                "1",
                "20",
                "1000",
                "1000",
                "5",
                "50",
                "2",
                "-1",
                "-1"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
